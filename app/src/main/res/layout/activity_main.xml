<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Deine TTR: "
                        android:textSize="24sp"
                        android:layout_weight="0.36"
                        android:gravity="center_vertical"
                />
                <EditText
                        android:id="@+id/edit_text_own_ttr"
                        android:inputType="number"
                        android:maxLength="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="1932"
                        android:textSize="24sp"
                        android:padding="8dp"
                        android:layout_weight="0.34"
                        android:gravity="center_vertical"
                        android:background="@android:color/holo_red_dark"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageButton
                            android:id="@+id/btn_clear_own_ttr"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/clear_textfield"
                            android:scaleType="fitCenter"
                            android:background="@android:color/transparent"
                            android:padding="2dp"
                    />
                </LinearLayout>
                <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:text="X"
                        android:layout_weight="0.15"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:text="Gegner"
                    android:textSize="24sp"
                    android:gravity="center_vertical|left"
                    android:layout_weight="0.36"
                />
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:text="Sieg"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_weight="0.20"
                />
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".44"
                        android:orientation="horizontal"
                        android:gravity="center">
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".60"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollview_op">
                <LinearLayout
                        android:id="@+id/linearlayout_scroll"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:id="@+id/linearlayout_row1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                        <EditText
                                android:id="@+id/edit_ttr_op1"
                                android:inputType="number"
                                android:maxLength="4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="1932"
                                android:textSize="24sp"
                                android:padding="8dp"
                                android:layout_weight="0.36"
                                android:gravity="center_vertical"
                                android:background="@android:color/holo_red_dark"
                        />
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".20"
                                android:orientation="horizontal"
                                android:gravity="center">
                            <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/op1_win"
                            />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".15"
                                android:orientation="horizontal"
                                android:gravity="center">
                            <ImageButton
                                    android:id="@+id/btn_delete_op1"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/clear_textfield"
                                    android:scaleType="fitCenter"
                                    android:background="@android:color/transparent"
                                    android:padding="2dp"
                            />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".15"
                                android:orientation="horizontal"
                                android:gravity="center">
                            <ImageButton
                                    android:id="@+id/btn_ageoption_op1"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/age"
                                    android:scaleType="fitCenter"
                                    android:background="@android:color/transparent"
                                    android:padding="2dp"
                            />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".14"
                                android:orientation="horizontal"
                                android:gravity="center">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center">
            <TextView
                    android:id="@+id/textview_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/clear_textfield"
                    android:text="+44 => deine Punkte betragen 1400"
                    android:textSize="24sp"
                    android:padding="2dp"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center">
            <Button
                    android:id="@+id/btn_add_op"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:text="Gegner hinzufügen"
                    android:padding="2dp"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center">
            <Button
                    android:id="@+id/btn_calculate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:text="TTR berechnen"
                    android:padding="2dp"
            />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>